---
import Button from './Button.astro';

export interface Props {
  name: string;
  model: string;
  image: string;
  serviceLife: string;
  material: string;
  description: string;
  pdfUrl?: string; // Optional PDF URL for product datasheet
}

const { name, model, image, serviceLife, material, description, pdfUrl } = Astro.props;
---

<div class="product-card">
  <div class="product-image">
    <img src={image} alt={description} />
  </div>
  <div class="product-info">
    <div class="product-header">
      <p class="product-category">{name}</p>
      <h3 class="product-name">{model}</h3>
    </div>
    <div class="product-tags">
      <div class="tag">
        <span class="tag-label">SERVICE LIFE</span>
        <span class="tag-value">{serviceLife}</span>
      </div>
      <div class="tag">
        <span class="tag-label">Material</span>
        <span class="tag-value">{material}</span>
      </div>
    </div>
    <p class="product-description">
      {description}
    </p>
  </div>
  <div class="product-actions">
    <Button variant="primary" href="/contact" text="REQUEST QUOTE" />
    {pdfUrl && (
      <Button variant="secondary" href={pdfUrl} text="DOWNLOAD PDF" />
    )}
  </div>
  <div class="product-decal"></div>
</div>

<style>
  .product-card {
    background: linear-gradient(180deg, var(--white) 0%, var(--blue-01) 100%);
    border: 1px solid var(--lightgray);
    display: flex;
    flex-direction: column;
    position: relative;
    overflow: hidden;
    transition: 0.3s;
  }

  .product-card:hover {
    transform: scale(1.02);
    border: 1px solid var(--blue-03);
  }

  .product-image {
    height: 460px;
    transition: transform 0.4s;
  }

  .product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .product-info {
    padding: 0 24px 24px;
    display: flex;
    flex-direction: column;
    gap: 8px;
    min-height: 312px;
    justify-content: flex-start;
  }

  .product-header {
    padding: 0 8px;
  }

  .product-category {
    font-size: 16px;
    font-weight: 900;
    text-transform: capitalize;
    color: var(--blue-06);
  }

  .product-name {
    font-family: var(--font-mono);
    font-size: 32px;
    font-weight: 800;
    line-height: 36px;
    letter-spacing: -1.28px;
    color: var(--blue-06);
  }

  .product-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 3px;
  }

  .tag {
    border: 1px solid var(--blue-02);
    display: flex;
    padding: 3px;
    gap: 2px;
  }

  .tag-label {
    padding: 4px 8px;
    border: 1px solid var(--blue-02);
    font-size: 14px;
    font-weight: 500;
    text-transform: uppercase;
    color: var(--blue-06);
  }

  .tag-value {
    padding: 4px 8px;
    background: var(--blue-02);
    font-size: 14px;
    font-weight: 500;
    color: var(--blue-06);
  }

  .product-description {
    font-size: 16px;
    font-weight: 700;
    line-height: normal;
    color: var(--blue-06);
    padding: 0 8px;
  }

  .product-actions {
    position: absolute;
    bottom: 0px;
    padding: 24px;
    display: flex;
    gap: 8px;
    flex-wrap: nowrap;
  }

  .product-decal {
    position: absolute;
    display: none;
    bottom: 0px;
    height: 6px;
    background: var(--blue-03);
    width: 100%;
  }

  .product-card:hover .product-decal {
    display: flex;
  }

  @media (max-width: 768px) {

    .product-name {
    font-size: 24px;
    line-height: 28px;
    letter-spacing: -1.28px;
    }

    .product-info {
    padding: 0 8px 64px;
    gap: 8px;
    min-height: fit-content;
    justify-content: flex-start;
    }

    .tag {
    padding: 2px;
    }

    .tag-label {
    padding: 2px 4px;
    font-size: 12px;
    }

    .tag-value {
    padding: 2px 4px;
    font-size: 12px;
    }

    .product-description {
    font-weight: 500;
    line-height: 20px;
    margin-bottom: 16px;
    }

    .product-actions {
      padding: 16px;
      gap: 8px;
    }

    .product-image {
      width: 100%;
      height: auto;
      transition: transform 0.4s;
    }



  }
</style>

