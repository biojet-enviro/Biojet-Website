---
import { useTranslations, type Locale } from '../i18n/translations';

export interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = useTranslations(locale);
---

<footer class="footer" id="contact">
  <div class="footer-bg"></div>
  <div class="footer-content">
    <div class="footer-columns">
      <div class="footer-column">
        <p class="footer-tagline">{t.footer.tagline}</p>
      </div>
      <div class="footer-column-right">
        <div class="footer-column">
          <h4>{t.footer.followUs}</h4>
          <ul>
            <li><a href="#">LinkedIn</a></li>
            <li><a href="#">Facebook</a></li>
            <li><a href="#">Youtube</a></li>
          </ul>
        </div>
        <div class="footer-column">
          <h4>{t.footer.contact}</h4>
          <ul>
            <li><a href="mailto:info@biojet.com.cn">info@biojet.com.cn</a></li>
            <li><a href="tel:+8613773576088">+86 13773576088</a></li>
            <li><a href="#">Whatsapp</a></li>
          </ul>
        </div>
      </div>
    </div>
    <div class="footer-columns">
      <div class="footer-column">
        <p class="footer-copyright">{t.footer.copyright}</p>
      </div>
      <div class="footer-agent">
        <span class="flag">ðŸ‡§ðŸ‡·</span>
        <span>Novaticc Equipamentos Industriais LTDA (Agent in Brazil)</span>
      </div>
    </div>
  </div>
  <div class="footer-product-image">
    <img src="/assets/footer-product.webp"/>
  </div>
  <div class="footer-svg">
    <img src="/assets/footer.svg"/>
  </div>
</footer>

<style>
  .footer {
    position: relative;
    padding: 40px 80px;
    height: 80vh;
    max-height: 1000px;
    background: linear-gradient(180deg, var(--blue-01) 50%, var(--blue-02) 100%);
    overflow: hidden;
  }

  .footer-bg {
    position: absolute;
    top: 0;
    left: 100px;
    width: 1654px;
    height: 431px;
    z-index: 0;
  }

  .footer-bg::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: url('/assets/logo-watermark.svg');
    background-size: contain;
    background-repeat: no-repeat;
    opacity: 0.1;
  }

  .footer-content {
    position: absolute;
    bottom: 0;
    z-index: 1;
    width: 100%;
    max-width: 1720px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 160px;
  }

  .footer-logo {
    width: 200px;
  }

  .footer-columns {
    display: flex;
    justify-content: space-between;
    gap: 60px;
  }

  .footer-column-right {
    display: flex;
    justify-content: space-between;
    width: 360px;
  }

  .footer-column {
    display: flex;
    flex-direction: column;
    gap: 16px;
    height: fit-content;
    width: fit-content;
  }

  .footer-column:first-child {
    width: fit-content;
    height: fit-content;
    justify-content: space-between;
    gap: 16px;
  }

  .footer-tagline {
    font-family: 'Segoe Script', cursive;
    font-size: 44px;
    font-weight: 700;
    line-height: 40px;
    color: var(--blue-06);
    max-width: 388px;
  }

  .footer-copyright {
    font-size: 16px;
    font-weight: 700;
    color: var(--blue-06);
  }

  .footer-column h4 {
    font-size: 16px;
    font-weight: 500;
    color: var(--blue-06);
    font-family: 'Rubik', sans-serif;
  }

  .footer-column ul {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .footer-column ul li a {
    font-size: 20px;
    font-weight: 900;
    color: var(--blue-06);
    transition: color 0.3s;
    text-decoration: none;
  }

  .footer-column ul li a:hover {
    color: var(--blue-05);
  }

  .footer-agent {
    display: flex;
    align-items: center;
    gap: 24px;
    font-size: 16px;
    font-weight: 500;
    color: var(--blue-05);
  }

  .footer-agent .flag {
    font-size: 32px;
  }

  .footer-product-image {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 45%;
    z-index: 1;
    pointer-events: none;
  }

  .footer-product-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .footer-svg {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 90%;
    z-index: 0;
    pointer-events: none;
  }

  .footer-svg img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    opacity: 0.8;
  }

  @media (max-width: 768px) {
    .footer {
      padding: 40px 24px;
      height: 90vh;
    }

    .footer-columns {
      flex-direction: column;
      gap: 36px;
    }

    .footer-column:first-child {
      width: 100%;
    }

    .footer-product-image {
      width: 150%;
      height: auto;
      transform: translateX(-10%);
    }

    .footer-tagline {
      font-size: 32px;
      line-height: 38px;
      max-width: 420px;
    }

    .footer-column h4 {
    font-size: 12px;
    line-height: 18px;
    }

    .footer-column ul li a {
    font-size: 16px;
    line-height: 22px;
    }

    .footer-agent {
    display: none;
    }

    .footer-column-right {
    flex-direction: column;
    gap: 36px;
    }

    .footer-content {
    gap: 180px;
    }

    .footer-copyright {
    font-size: 14px;
    margin-bottom: 16px;
    }

    .footer-svg  {
    left: 0;
    transform: rotate(-90deg) translateY(-10%);
    height: 100%;
    width: auto;
    }

    
  }
</style>

