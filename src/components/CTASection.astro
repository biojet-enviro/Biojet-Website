---
import Button from './Button.astro';
import { useTranslations, type Locale } from '../i18n/translations';

export interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = useTranslations(locale);
const linkPrefix = locale === 'ru' ? '/ru' : '';
---

<section class="cta-section">
  <div class="cta-content">
    <h2>{t.home.ctaTitle}</h2>
    <p>{t.home.ctaDescription}</p>
    <Button variant="primary" href={`${linkPrefix}/contact`} text={t.home.ctaButton} class="cta-large" />
  </div>
</section>

<style>
  .cta-section {
    height: 100vh;
    display: flex;
    align-items: center;
    background: linear-gradient(180deg, var(--white) 0%, var(--blue-01) 100%);
  }

  .cta-content {
    max-width: 1920px;
    padding-top: 10%;
    height: 80vh;
    width: 100%;
    margin: 0 auto;
    align-items: center;
    text-align: center;
    background-image: url('../assets/cta-bg.webp');
    background-position: center center;
    background-size: cover;
  }

  .cta-content h2 {
    font-size: 56px;
    font-weight: 700;
    line-height: 64px;
    color: var(--blue-07);
    margin-bottom: 24px;
  }

  .cta-content p {
    font-size: 24px;
    font-weight: 500;
    line-height: 32px;
    color: var(--blue-07);
    margin-bottom: 10%;
  }

  :global(.cta-large) {
    padding: 16px 32px;
    font-size: 18px;
    height: 56px;
    width: fit-content;
  }

  @media (max-width: 768px) {
    .cta-section {
      height: 100vh;
    }

    .cta-content {
      padding: 35% 40px 0;
      height: 680px;
    }

    .cta-content h2 {
      font-size: 32px;
      line-height: 38px;
    }

    .cta-content p {
      font-size: 16px;
      line-height: 20px;
      margin-bottom: 30%;
    }
  }
</style>

