---
import Button from './Button.astro';
---

<section class="cta-section">
  <div class="cta-content">
    <h2>Ready to optimize your wastewater treatment?</h2>
    <p>Contact our experts for a free consultation and discover how Biojet can transform your operations.</p>
    <Button variant="primary" href="/contact" text="GET YOUR FREE CONSULTATION" class="cta-large" />
  </div>
</section>

<style>
  .cta-section {
    padding: var(--section-padding) 24px;
    background: linear-gradient(180deg, var(--white) 0%, var(--blue-01) 100%);
  }

  .cta-content {
    max-width: 1600px;
    margin: 0 auto;
    padding: 100px 160px;
    text-align: center;
    background-image: url('../assets/cta-bg.jpg');
    background-position: center bottom;
    background-size: cover;
    box-shadow: 0 0 40px rgba(88, 200, 215, 0.3);
  }

  .cta-content h2 {
    font-size: 56px;
    font-weight: 700;
    line-height: 64px;
    color: var(--white);
    margin-bottom: 24px;
    text-shadow: 0 0 4px rgba(0, 0, 0, 0.8);
  }

  .cta-content p {
    font-size: 24px;
    font-weight: 500;
    line-height: 32px;
    color: var(--white);
    margin-bottom: 48px;
    text-shadow: 0 0 4px rgba(0, 0, 0, 0.8);
  }

  :global(.cta-large) {
    padding: 16px 32px;
    font-size: 18px;
    height: 56px;
    width: fit-content;
  }

  @media (max-width: 768px) {
    .cta-content {
      padding: 60px 40px;
    }

    .cta-content h2 {
      font-size: 32px;
      line-height: 38px;
    }

    .cta-content p {
      font-size: 16px;
      line-height: 20px;
    }
  }
</style>

