---
import Button from './Button.astro';
import { useTranslations, type Locale } from '../i18n/translations';

export interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = useTranslations(locale);
const linkPrefix = locale === 'ru' ? '/ru' : '';
---

<section class="cta-section">
  <div class="cta-content">
    <h2>{t.home.ctaTitle}</h2>
    <p>{t.home.ctaDescription}</p>
    <Button variant="primary" href={`${linkPrefix}/contact`} text={t.home.ctaButton} class="cta-large" />
  </div>
</section>

<style>
  .cta-section {
    padding: var(--section-padding) 24px;
    background: linear-gradient(180deg, var(--white) 0%, var(--blue-01) 100%);
  }

  .cta-content {
    max-width: 1600px;
    margin: 0 auto;
    padding: 240px 160px 200px;
    text-align: center;
    background-image: url('../assets/cta-bg.jpg');
    background-position: center bottom;
    background-size: cover;
    box-shadow: 0 0 40px rgba(88, 200, 215, 0.3);
  }

  .cta-content h2 {
    font-size: 56px;
    font-weight: 700;
    line-height: 64px;
    color: var(--white);
    margin-bottom: 24px;
    text-shadow: 0 0 4px rgba(0, 0, 0, 0.8);
  }

  .cta-content p {
    font-size: 24px;
    font-weight: 500;
    line-height: 32px;
    color: var(--white);
    margin-bottom: 48px;
    text-shadow: 0 0 4px rgba(0, 0, 0, 0.8);
  }

  :global(.cta-large) {
    padding: 16px 32px;
    font-size: 18px;
    height: 56px;
    width: fit-content;
  }

  @media (max-width: 768px) {
    .cta-content {
      padding: 60px 40px;
    }

    .cta-content h2 {
      font-size: 32px;
      line-height: 38px;
    }

    .cta-content p {
      font-size: 16px;
      line-height: 20px;
    }
  }
</style>

