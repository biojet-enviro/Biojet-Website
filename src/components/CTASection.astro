---
import Button from './Button.astro';
---

<section class="cta-section">
  <div class="cta-content">
    <h2>Ready to optimize your wastewater treatment?</h2>
    <p>Contact our experts for a free consultation and discover how Biojet can transform your operations.</p>
    <Button variant="primary" href="/contact" text="GET YOUR FREE CONSULTATION" class="cta-large" />
  </div>
</section>

<style>
  .cta-section {
    padding: var(--section-padding) 0;
    background: linear-gradient(180deg, var(--blue-02) 0%, var(--white) 100%);
  }

  .cta-content {
    max-width: 1600px;
    margin: 0 auto;
    padding: 100px 160px;
    text-align: center;
    background: var(--blue-01);
    border: 2px solid var(--blue-03);
    border-radius: 8px;
    box-shadow: 0 8px 32px rgba(88, 200, 215, 0.2);
  }

  .cta-content h2 {
    font-size: 56px;
    font-weight: 700;
    line-height: 64px;
    color: var(--blue-06);
    margin-bottom: 24px;
  }

  .cta-content p {
    font-size: 24px;
    font-weight: 500;
    line-height: 32px;
    color: var(--blue-06);
    margin-bottom: 48px;
  }

  :global(.cta-large) {
    padding: 16px 32px;
    font-size: 18px;
    height: 56px;
    width: fit-content;
  }

  @media (max-width: 768px) {
    .cta-content {
      padding: 60px 40px;
    }

    .cta-content h2 {
      font-size: 36px;
      line-height: 44px;
    }

    .cta-content p {
      font-size: 18px;
      line-height: 26px;
    }
  }
</style>

