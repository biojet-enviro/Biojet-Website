---
import Button from './Button.astro';
import { useTranslations, languageNames, type Locale } from '../i18n/translations';

export interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = useTranslations(locale);

// Get current path without locale prefix for language switching
const currentPath = Astro.url.pathname.replace(/^\/(ru|pt|th|en)/, '') || '/';

// Generate URLs for all languages
const languageUrls = {
  en: currentPath || '/',
  ru: `/ru${currentPath}`,
  pt: `/pt${currentPath}`,
  th: `/th${currentPath}`
};
---

<nav class="navbar">
  <div class="navbar-container">
    <div class="logo">
      <a href="/">
        <img src="/assets/logo.svg" alt="Biojet Logo" />
      </a>
    </div>

    <button class="mobile-menu-toggle" aria-label="Toggle menu">
      <span></span>
      <span></span>
      <span></span>
    </button>

    <div class="nav-content">
      <div class="nav-left">
        <div class="nav-links">
          <a href={languageUrls[locale] === '/' ? '/about' : `${languageUrls[locale]}/about`.replace('//', '/')}>{t.nav.about}</a>
          <span class="divider"></span>
          <a href={languageUrls[locale] === '/' ? '/products' : `${languageUrls[locale]}/products`.replace('//', '/')}>{t.nav.products}</a>
          <span class="divider"></span>
          <a href={languageUrls[locale] === '/' ? '/blog' : `${languageUrls[locale]}/blog`.replace('//', '/')}>{t.nav.blog}</a>
        </div>
        <div class="language-selector">
          <button class="language-selector-btn" aria-label="Select language">
            <span>üåç {languageNames[locale]}</span>
            <svg width="12" height="8" viewBox="0 0 12 8" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M1 1.5L6 6.5L11 1.5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
          <div class="language-dropdown">
            {Object.entries(languageNames).map(([langCode, langName]) => (
              <a 
                href={languageUrls[langCode as Locale]} 
                class={`language-option ${langCode === locale ? 'active' : ''}`}
              >
                {langName}
              </a>
            ))}
          </div>
        </div>
      </div>
      
      <div class="nav-right">
        <Button variant="primary" href={languageUrls[locale] === '/' ? '/contact' : `${languageUrls[locale]}/contact`.replace('//', '/')} text={t.nav.getInTouch} />
      </div>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle functionality
  const menuToggle = document.querySelector('.mobile-menu-toggle');
  const navContent = document.querySelector('.nav-content');
  const navbar = document.querySelector('.navbar');
  
  menuToggle?.addEventListener('click', () => {
    menuToggle.classList.toggle('active');
    navContent?.classList.toggle('active');
    navbar?.classList.toggle('menu-open');
  });

  // Close menu when clicking on a link
  const navLinks = document.querySelectorAll('.nav-links a');
  navLinks.forEach(link => {
    link.addEventListener('click', () => {
      menuToggle?.classList.remove('active');
      navContent?.classList.remove('active');
      navbar?.classList.remove('menu-open');
    });
  });

  // Language dropdown functionality
  const langSelector = document.querySelector('.language-selector');
  const langButton = document.querySelector('.language-selector-btn');

  langButton?.addEventListener('click', (e) => {
    e.stopPropagation();
    langSelector?.classList.toggle('open');
  });

  // Close dropdown and menu when clicking outside
  document.addEventListener('click', (e) => {
    const target = e.target as HTMLElement;
    if (!langSelector?.contains(target)) {
      langSelector?.classList.remove('open');
    }
    if (!navbar?.contains(target)) {
      menuToggle?.classList.remove('active');
      navContent?.classList.remove('active');
      navbar?.classList.remove('menu-open');
    }
  });
</script>

<style>
  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: rgba(244, 251, 252, 0.7);
    backdrop-filter: blur(8px);
    border-bottom: 1px solid var(--blue-02);
  }

  .navbar-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 8px 80px;
    height: 102px;
    max-width: 1920px;
    margin: 0 auto;
  }

  .logo {
    width: 210px;
    height: 86px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
  }

  .logo img {
    height: 100%;
    width: auto;
  }

  .mobile-menu-toggle {
    display: none;
    flex-direction: column;
    gap: 6px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    z-index: 1001;
  }

  .mobile-menu-toggle span {
    width: 25px;
    height: 3px;
    background-color: var(--blue-06);
    transition: all 0.3s ease;
    border-radius: 0px;
  }

  .mobile-menu-toggle.active span:nth-child(1) {
    transform: rotate(45deg) translate(4px, 8px);
  }

  .mobile-menu-toggle.active span:nth-child(2) {
    opacity: 0;
  }

  .mobile-menu-toggle.active span:nth-child(3) {
    transform: rotate(-45deg) translate(4px, -8px);
  }

  .nav-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
  }

  .nav-left {
    display: flex;
    align-items: center;
    gap: 16px;
    flex: 1;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 18px;
    padding: 8px 20px;
    background: var(--white);
    border: 1px solid var(--blue-03);
    border-radius: 50px;
    font-weight: 900;
    font-size: 16px;
  }

  .nav-links a {
    text-decoration: none;
    color: var(--blue-06);
    transition: color 0.3s;
  }

  .nav-links a:hover {
    color: var(--blue-05);
  }

  .nav-links .divider {
    width: 1px;
    height: 22px;
    background: var(--blue-03);
  }

  .language-selector {
    position: relative;
  }

  .language-selector-btn {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 10px 16px;
    background: var(--white);
    border: 1px solid var(--blue-03);
    border-radius: 50px;
    font-weight: 500;
    font-size: 16px;
    color: var(--blue-06);
    cursor: pointer;
    transition: all 0.3s;
    font-family: inherit;
  }

  .language-selector-btn:hover {
    background: var(--blue-02);
    border-color: var(--blue-04);
  }

  .language-selector-btn svg {
    transition: transform 0.3s;
  }

  .language-selector.open .language-selector-btn svg {
    transform: rotate(180deg);
  }

  .language-dropdown {
    position: absolute;
    top: calc(100% + 8px);
    left: 0;
    min-width: 160px;
    background: var(--white);
    border: 1px solid var(--blue-03);
    border-radius: 24px;
    box-shadow: 0 4px 12px rgba(23, 90, 120, 0.15);
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.3s;
    z-index: 1000;
    overflow: hidden;
  }

  .language-selector.open .language-dropdown {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .language-option {
    display: block;
    padding: 12px 24px;
    color: var(--blue-06);
    text-decoration: none;
    font-size: 16px;
    font-weight: 500;
    transition: all 0.2s;
    border-bottom: 1px solid var(--blue-02);
  }

  .language-option:last-child {
    border-bottom: none;
  }

  .language-option:hover {
    background: var(--blue-02);
    color: var(--blue-05);
  }

  .language-option.active {
    background: var(--blue-03);
    color: var(--blue-05);
    font-weight: 700;
  }

  .nav-right {
    display: flex;
    justify-content: flex-end;
    flex: 1;
  }

  @media (max-width: 1440px) {
    .navbar-container {
      padding: 8px 40px;
    }
  }

  @media (max-width: 1024px) {
    .navbar-container {
      padding: 8px 20px;
    }

    .logo {
      width: 160px;
      height: 66px;
    }

    .nav-links {
      font-size: 14px;
      gap: 14px;
      padding: 6px 16px;
    }

    .language-selector {
      padding: 6px 16px;
      font-size: 14px;
    }
  }

  @media (max-width: 768px) {
    .navbar-container {
      height: 70px;
      width: 100%Ôºõ
      padding: 12px 20px;
      backdrop-filter: blur(12px);
    }

    .logo {
      width: 140px;
      height: 56px;
      margin: 0 auto;
      position: relative;
      left: auto;
      transform: none;
      order: 1;
    }

    .mobile-menu-toggle {
      display: flex;
      position: absolute;
      right: 20px;
      order: 2;
    }

    .nav-content {
      position: fixed;
      top: 70px;
      left: 0;
      right: 0;
      background: rgba(244, 251, 252, 0.7);
      backdrop-filter: blur(8px);
      flex-direction: column;
      padding: 24px 24px;
      gap: 24px;
      max-height: 0;
      overflow: hidden;
      opacity: 0;
      transition: all 0.3s ease;
      border-bottom: 1px solid var(--blue-02);
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    }

    .nav-content.active {
      max-height: 500px;
      backdrop-filter: blur(8px);
      opacity: 1;
    }

    .nav-left {
      flex-direction: column;
      width: 100%;
      gap: 16px;
    }

    .nav-links {
      width: 100%;
      flex-direction: column;
      gap: 0;
      padding: 0;
      border-radius: 0;
    }

    .nav-links a {
      width: 100%;
      padding: 14px 20px;
      text-align: center;
      background: var(--white);
      border-radius: 12px;
      font-size: 16px;
    }

    .nav-links .divider {
      display: none;
    }

    .language-selector {
      width: 100%;
    }

    .language-selector-btn {
      width: 100%;
      justify-content: center;
      padding: 12px 20px;
      font-size: 16px;
      border-radius: 12px;
    }

    .language-dropdown {
      position: static;
      width: 100%;
      margin-top: 8px;
      border-radius: 12px;
      box-shadow: none;
    }

    .language-selector.open .language-dropdown {
      transform: none;
    }

    .language-option {
      border-radius: 0;
    }

    .language-option:first-child {
      border-radius: 12px 12px 0 0;
    }

    .language-option:last-child {
      border-radius: 0 0 12px 12px;
    }

    .nav-right {
      width: 100%;
      justify-content: center;
    }

    /* Prevent scrolling when menu is open */
    .navbar.menu-open ~ * {
      filter: blur(2px);
    }
  }

  @media (max-width: 480px) {
    .navbar-container {
      padding: 12px 16px;
    }

    .logo {
      width: 120px;
      height: 48px;
    }

    .mobile-menu-toggle {
      right: 16px;
    }

    .mobile-menu-toggle span {
      width: 22px;
      height: 2.5px;
    }

    .nav-content {
      padding: 20px 16px;
      top: 70px;
    }
  }
</style>



