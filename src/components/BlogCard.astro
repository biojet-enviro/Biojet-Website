---
import { useTranslations, type Locale } from '../i18n/translations';
import Button from '../components/Button.astro';

export interface Props {
  title: string;
  excerpt: string;
  date: string;
  image: string;
  slug: string;
  locale: Locale;
}

const { title, excerpt, date, image, slug, locale } = Astro.props;
const t = useTranslations(locale);
const linkPrefix = locale === 'en' ? '' : `/${locale}`;
---

<article class="blog-card">
  <div class="blog-card-image">
    <img src={image} alt={title} />
  </div>
  <div class="blog-card-content">
    <div class="blog-meta">
      <span class="blog-tag">{t.home.blogTag}</span>
      <span class="blog-date">{date}</span>
    </div>
    <h4>{title}</h4>
    <p>{excerpt}</p>
    <Button variant="simple" href={`${linkPrefix}/blog/${slug}`} text={t.home.blogReadMore} class="read-more" />
  </div>
</article> 

<style>
  .blog-card {
    background: var(--white);
    border: 1px solid var(--lightgray);
    overflow: hidden;
    transition: transform 0.3s, box-shadow 0.3s;
  }

  .blog-card:hover {
    transform: scale(1.02);
    border: 1px solid var(--blue-03);
  }

  .blog-card-image {
    width: 100%;
    height: 220px;
    overflow: hidden;
  }

  .blog-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s;
  }

  .blog-card:hover .blog-card-image img {
    transform: scale(1.05);
  }

  .blog-card-content {
    padding: 24px;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .blog-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .blog-tag {
    padding: 4px 8px;
    background: var(--blue-02);
    font-size: 14px;
    font-weight: 900;
    color: var(--blue-06);
  }

  .blog-date {
    font-size: 16px;
    font-weight: 500;
    color: var(--blue-06);
  }

  .blog-card-content h4 {
    font-size: 20px;
    font-weight: 700;
    line-height: 28px;
    color: var(--blue-06);
  }

  .blog-card-content p {
    font-size: 14px;
    line-height: 20px;
    color: var(--blue-06);
  }

  .read-more {
    font-size: 14px;
    font-weight: 900;
    color: var(--blue-05);
    text-transform: uppercase;
    transition: color 0.3s;
    text-decoration: none;
  }

  .read-more:hover {
    color: var(--blue-04);
  }

  @media (max-width: 768px) {
    .blog-card-content h4 {
      font-size: 18px;
      line-height: 24px;
    }
    
    .blog-date,
    .blog-card-content p {
      font-size: 14px;
      line-height: 20px;
      color: var(--blue-06);
    }

  }
</style>

