---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
---

<Layout title="Contact - Biojet">
  <section style="min-height: 100vh; display: flex; align-items: center; justify-content: center; padding-top: 150px;">
    <div style="text-align: center; max-width: 800px; padding: 40px;">
      <h1 style="font-size: 48px; color: var(--blue-06); margin-bottom: 24px;">Contact Us</h1>
      <p style="font-size: 20px; color: var(--blue-05); margin-bottom: 40px;">This page is under construction.</p>
      <div style="margin-bottom: 40px; text-align: left;">
        <p style="font-size: 18px; color: var(--blue-06); margin-bottom: 16px;"><strong>Email:</strong> info@biojet.com.cn</p>
        <p style="font-size: 18px; color: var(--blue-06); margin-bottom: 16px;"><strong>Phone:</strong> +86 1371234567</p>
        <p style="font-size: 18px; color: var(--blue-06); margin-bottom: 16px;"><strong>WhatsApp:</strong> Available</p>
        <p style="font-size: 18px; color: var(--blue-06); margin-bottom: 16px;"><strong>Telegram:</strong> Available</p>
      </div>
      <Button variant="primary" href="/" text="BACK TO HOME" />
    </div>
  </section>
</Layout>

