---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
import ProductCard from '../components/ProductCard.astro';
import FeatureCard from '../components/FeatureCard.astro';
import BlogCard from '../components/BlogCard.astro';
import FAQItem from '../components/FAQItem.astro';
import CTASection from '../components/CTASection.astro';

// Get blog posts
const allBlogPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

// Sort by date (newest first) and get latest 4
const latestPosts = allBlogPosts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 4);

// Format date helper
function formatDate(date: Date) {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'short'
  }).format(date);
}
---

<Layout title="Biojet - Industry-leading Jet Aerators for Wastewater Treatment">
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="hero-bg"></div>
    <div class="hero-content">
      <div class="hero-text">
        <h1 class="hero-title">
          <span class="title-prefix">Industry-leading jet aerators for </span>
          <span 
            class="text-rotator" 
            aria-live="polite"
            style="--count: 8;"
          >
            <span class="rotator__item" style="--i: 0;">food-processing wastewater treatment</span>
            <span class="rotator__item" style="--i: 1;">landfill leachate treatment</span>
            <span class="rotator__item" style="--i: 2;">industrial wastewater treatment</span>
            <span class="rotator__item" style="--i: 3;">kitchen effluent treatment</span>
            <span class="rotator__item" style="--i: 4;">deep aeration basins</span>
            <span class="rotator__item" style="--i: 5;">high-concentration sewage treatment</span>
            <span class="rotator__item" style="--i: 6;">municipal wastewater treatment</span>
            <span class="rotator__item" style="--i: 7;">membrane bioreactor systems</span>
          </span>
        </h1>
        <p class="hero-description">
          Partner with Biojet to achieve unparalleled wastewater treatment performance through tailored jet aeration solutions customized for your unique projects.
        </p>
        <Button variant="primary" href="/contact" text="Schedule Your Free Consultation" class="hero-cta" />
      </div>
      <div class="hero-badge">
        <img src="/assets/german-quality-badge.png" alt="German Quality" />
      </div>
    </div>
  </section>

  <!-- Video Section -->
  <section class="video-section">
    <div class="video-content">
      <div class="video-text">
        <h2 class="video-title">Innovative Aeration,<br>Cleaner Tomorrow.</h2>
        <p class="video-description">
          At Biojet, we have taken jet mixing aeration to the next level with our Laval Jet Aerator, a solution designed to meet the most demanding wastewater treatment challenges with outstanding efficiency and reliability.
        </p>
      </div>
      <div class="video-container">
        <img src="/assets/video-placeholder.jpg" alt="Biojet Jet Aerator in Action" />
        <button class="play-button" aria-label="Play video">
          <svg width="60" height="60" viewBox="0 0 60 60" fill="none" xmlns="http://www.w3.org/2000/svg">
            <circle cx="30" cy="30" r="30" fill="white" fill-opacity="0.9"/>
            <path d="M24 20L40 30L24 40V20Z" fill="#175A78"/>
          </svg>
        </button>
      </div>
    </div>
  </section>

  <!-- Products Section -->
  <section class="products-section" id="products">
    <div class="products-content">
      <h2 class="section-title">Check out our products</h2>
      
      <div class="products-grid">
        <ProductCard
          name="Biojet® jet aerator"
          model="JET-DS-18H"
          image="/assets/product-1.png"
          serviceLife=">20 YEARS"
          material="SUS304"
          description="Disc Laval jet aerator, suitable for MBR processes of organic wastewater such as landfill leachate wastewater."
        />
        <ProductCard
          name="Biojet® jet aerator"
          model="JET-DS-16V"
          image="/assets/product-2.png"
          serviceLife=">20 YEARS"
          material="SUS304"
          description="Dome-shaped Laval Jet Aerator with 16 pitching Nozzles, suitable for MBR and ultra-deep aerobic basins."
        />
        <ProductCard
          name="Biojet® jet aerator"
          model="JET-PP-12V"
          image="/assets/product-3.png"
          serviceLife=">20 YEARS"
          material="PP Plastic"
          description="Laval jet aerator made of PP engineering plastic, suitable for MBR and ultra-deep aerobic basins."
        />
        <ProductCard
          name="Biojet® jet aerator"
          model="ASPIRATING JET AERATOR"
          image="/assets/product-4.png"
          serviceLife=">20 YEARS"
          material="SUS304"
          description="Integrated self-aspirating Laval jet aerator, suitable for decentralized small waste water treatment plants."
        />
        <ProductCard
          name="Biojet® Laval Jet Aerator"
          model="RING-SHAPED JET AERATOR"
          image="/assets/product-5.png"
          serviceLife=">20 YEARS"
          material="SUS304"
          description="Ring-shaped Laval jet mixing aerator, jet mixer, suitable for sewage treatment tanks with internal columns."
        />
        <ProductCard
          name="Biojet® Laval Jet Aerator"
          model="DIRECTIONAL JET AERATOR"
          image="/assets/product-6.png"
          serviceLife=">20 YEARS"
          material="SUS304"
          description="Directional or Bi-directional Manifold Laval Jet Aerator, suitable for oxidation ditch."
        />
      </div>

      <!-- CTA Banner -->
      <div class="products-cta-banner">
        <div class="cta-banner-content">
          <h3>We are not just equipment suppliers.<br>We are problem solvers.</h3>
          <p>Our technical expert provide you customized, project-specific solutions.</p>
        </div>
        <Button variant="primary" href="/contact" text="GET IN TOUCH" />
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="features-section">
    <div class="features-content">
      <h2 class="section-title">The advantages of jet aerators enhanced by Biojet®</h2>
      
      <div class="features-grid">
        <div class="features-column">
          <FeatureCard
            icon='<svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M7 16L17 8M17 16L7 8" stroke="#58C8D7" stroke-width="2" stroke-linecap="round"/></svg>'
            title="High Oxygen Transfer"
            value="40–45% OTE"
            description="Innovative Laval nozzle creates ultra-fine bubbles and high surface renewal for rapid oxygen dissolution and extended gas-liquid contact time."
          />
          <FeatureCard
            icon='<svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><circle cx="12" cy="12" r="9" stroke="#58C8D7" stroke-width="2"/><path d="M12 3L12 12L18 12" stroke="#58C8D7" stroke-width="2"/></svg>'
            title="Wide Coverage"
            value="Service Ø 10–12 m"
            description="Powerful jet stream and efficient mixing enable larger service area per unit compared to conventional diffusers or mechanical aerators."
          />
          <FeatureCard
            icon='<svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><rect x="4" y="14" width="4" height="6" stroke="#58C8D7" stroke-width="2"/><rect x="10" y="10" width="4" height="10" stroke="#58C8D7" stroke-width="2"/><rect x="16" y="6" width="4" height="14" stroke="#58C8D7" stroke-width="2"/></svg>'
            title="High α-Factor Stability"
            value="0.85–0.9"
            description="Stable oxygen transfer performance even under high MLSS and variable wastewater conditions."
          />
        </div>
        
        <div class="features-image">
          <img src="/assets/feature-image.png" alt="Biojet Jet Aerator Technology" />
        </div>
        
        <div class="features-column">
          <FeatureCard
            icon='<svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M12 2L4 8L12 14L20 8L12 2Z" stroke="#58C8D7" stroke-width="2" stroke-linejoin="round"/><path d="M4 16L12 22L20 16" stroke="#58C8D7" stroke-width="2" stroke-linejoin="round"/></svg>'
            title="Energy Efficiency"
            value="50% energy saving"
            description="Optimized air-to-water ratio and nozzle geometry lower blower power demand while maintaining superior aeration performance."
          />
          <FeatureCard
            icon='<svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><circle cx="12" cy="12" r="9" stroke="#58C8D7" stroke-width="2"/><path d="M12 7V12L15 15" stroke="#58C8D7" stroke-width="2" stroke-linecap="round"/></svg>'
            title="Long Lifespan"
            value="20+ years"
            description="Reinforced flange design eliminates risk of breakage. High-strength throat lining prevents erosion and maintains performance over years of operation."
          />
          <FeatureCard
            icon='<svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><circle cx="9" cy="7" r="4" stroke="#58C8D7" stroke-width="2"/><path d="M2 21V19C2 16.7909 3.79086 15 6 15H12C14.2091 15 16 16.7909 16 19V21" stroke="#58C8D7" stroke-width="2"/><circle cx="18" cy="11" r="2" stroke="#58C8D7" stroke-width="2"/></svg>'
            title="Customizable Solutions"
            value="Project-specific"
            description="We provide case-by-case system design and on-site support to match process requirements and tank geometries."
          />
        </div>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="about-section" id="about">
    <div class="about-content">
      <h2 class="about-label">About us</h2>
      <div class="about-grid">
        <div class="about-image">
          <div class="slideshow-container">
            <img src="/assets/factory-1.png" alt="Biojet Factory" class="slideshow-image" style="--slide-index: 0;" />
            <img src="/assets/factory-2.png" alt="Biojet Factory" class="slideshow-image" style="--slide-index: 1;" />
            <img src="/assets/factory-3.png" alt="Biojet Factory" class="slideshow-image" style="--slide-index: 2;" />
            <img src="/assets/factory-4.png" alt="Biojet Factory" class="slideshow-image" style="--slide-index: 3;" />
          </div>
        </div>
        <div class="about-text">
          <div class="about-main">
            <h3>We design and manufacture cutting-edge jet aeration technologies for industries worldwide.</h3>
            <p>
              Our flagship product, the Laval Jet Aerator, is recognized industry-wide for its performance, durability, and efficiency. Engineered for maximum oxygen transfer and minimal maintenance, our jet aerators set the benchmark in wastewater treatment. Our engineer from Germany ensures solutions of the highest quality and effectiveness.
            </p>
          </div>
          <div class="about-stats">
            <div class="stats-row">
              <div class="stat-item">
                <div class="stat-divider"></div>
                <div class="stat-content">
                  <div class="stat-number">2009</div>
                  <div class="stat-label">Launched in 2009</div>
                </div>
              </div>
              <div class="stat-item">
                <div class="stat-divider"></div>
                <div class="stat-content">
                  <div class="stat-number">100+</div>
                  <div class="stat-label">Over 100 clients</div>
                </div>
              </div>
            </div>
            <Button variant="secondary" text="VIEW MORE" />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Logo Section -->
  <section class="logo-section">
    <div class="logo-content">
      <h2 class="section-title">Trusted by over 100 clients across the industry.</h2>
      <div class="logo-marquee">
        <div class="logo-track logo-track-left">
          {[^1, 2, 3, 4, 5, 6, 7].map((i) => (
            <div class="client-logo"><img src={`/assets/client-logo-${i}.png`} alt={`Client ${i}`} /></div>
          ))}
          {[^1, 2, 3, 4, 5, 6, 7].map((i) => (
            <div class="client-logo"><img src={`/assets/client-logo-${i}.png`} alt={`Client ${i}`} /></div>
          ))}
        </div>
        <div class="logo-track logo-track-right">
          {[^8, 9, 10, 11, 12, 13, 14].map((i) => (
            <div class="client-logo"><img src={`/assets/client-logo-${i}.png`} alt={`Client ${i}`} /></div>
          ))}
          {[^8, 9, 10, 11, 12, 13, 14].map((i) => (
            <div class="client-logo"><img src={`/assets/client-logo-${i}.png`} alt={`Client ${i}`} /></div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section (Component) -->
  <CTASection />

  <!-- Blog Section -->
  <section class="blog-section" id="blog">
    <div class="blog-content">
      <div class="blog-header">
        <h2 class="section-title">Our latest articles</h2>
        <Button variant="secondary" href="/blog" text="View All" />
      </div>
      {latestPosts.length > 0 && (
        <>
          <div class="blog-featured">
            <div class="blog-image">
              <img src={latestPosts[^0].data.coverImage} alt={latestPosts[^0].data.title} />
            </div>
            <div class="blog-info">
              <div class="blog-meta">
                <span class="blog-tag">BLOG</span>
                <span class="blog-date">{formatDate(latestPosts[^0].data.pubDate)}</span>
              </div>
              <h3 class="blog-title">{latestPosts[^0].data.title}</h3>
              <p class="blog-excerpt">
                {latestPosts[^0].data.description}
              </p>
              <a href={`/blog/${latestPosts[^0].slug}`} class="read-more">Read More</a>
            </div>
          </div>
          {latestPosts.length > 1 && (
            <div class="blog-grid">
              {latestPosts.slice(1).map((post) => (
                <BlogCard
                  title={post.data.title}
                  excerpt={post.data.description}
                  date={formatDate(post.data.pubDate)}
                  image={post.data.coverImage}
                  slug={post.slug}
                />
              ))}
            </div>
          )}
        </>
      )}
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="faq-section">
    <div class="faq-content">
      <div class="faq-intro">
        <h2>Frequently asked questions</h2>
        <div class="faq-image">
          <img src="/assets/faq-illustration.png" alt="FAQ" />
        </div>
      </div>
      <div class="faq-list">
        <FAQItem
          question="What makes the Biojet Laval Jet Aerator different from other aeration systems?"
          answer="Our aerators combine high oxygen transfer efficiency, powerful mixing, and a maintenance-free design, delivering both energy savings and long-term reliability."
        />
        <FAQItem
          question="What information do I need to provide for you to design a system proposal?"
          answer="details include tank size, water depth, wastewater characteristics, flow rates, and treatment objectives."
        />
        <FAQItem
          question="What is the typical lead time from order to delivery?"
          answer="Lead time is usually 30–50 days (subject to order quantity and model specifications)."
        />
        <FAQItem
          question="What maintenance is required?"
          answer="Minimal maintenance is required - typically just periodic visual inspection. No moving parts mean fewer failure points and lower operational costs."
        />
        <FAQItem
          question="How deep can the aerator be installed and still achieve high efficiency?"
          answer="Our systems perform effectively in deep basins, with oxygen utilization remaining stable even at 8–10 m water depth."
        />
        <FAQItem
          question="Do you provide after-sales technical support worldwide?"
          answer="Yes. Our dedicated support team provides global after-sales service, ensuring long-term customer satisfaction."
        />
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Hero Section */
  .hero-section {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    padding-top: 120px;
    overflow: hidden;
    background: var(--blue-01);
  }

  .hero-bg {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 600px;
    background-image: url('/assets/hero-bg.png');
    background-size: cover;
    background-position: center bottom;
    background-repeat: no-repeat;
    z-index: 0;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    width: 100%;
    max-width: 1800px;
    padding: 0 40px;
    display: flex;
    flex-direction: column;
    gap: 283px;
  }

  .hero-text {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .hero-title {
    font-size: 80px;
    font-weight: 700;
    line-height: 88px;
    color: var(--blue-05);
  }

  .title-prefix {
    display: inline;
  }

  .text-rotator {
    display: inline-block;
    position: relative;
    min-width: 45ch; /* Reserve space for longest phrase */
    min-height: 88px;
    vertical-align: top;
  }

  .rotator__item {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    opacity: 0;
    transform: translateY(0.2em);
    white-space: nowrap;
    animation: fadeSlideRotate 12s linear infinite;
    animation-delay: calc((12s / var(--count)) * var(--i));
    will-change: opacity, transform;
  }

  @keyframes fadeSlideRotate {
    0% { opacity: 0; transform: translateY(0.2em); }
    2% { opacity: 1; transform: translateY(0); }
    10% { opacity: 1; transform: translateY(0); }
    12.5% { opacity: 0; transform: translateY(-0.15em); }
    100% { opacity: 0; transform: translateY(-0.15em); }
  }

  /* Accessibility: respect reduced motion preference */
  @media (prefers-reduced-motion: reduce) {
    .rotator__item {
      animation: none;
      opacity: 0;
      transform: none;
    }
    .rotator__item:first-child {
      opacity: 1;
    }
  }

  .hero-description {
    font-size: 20px;
    font-weight: 700;
    line-height: 26px;
    color: var(--blue-05);
    max-width: 750px;
  }

  .hero-badge {
    display: flex;
    justify-content: flex-end;
    transform: translateY(-30%);
  }

  .hero-badge img {
    width: 180px;
    height: 180px;
    box-shadow: 0px 8px 16px rgba(23, 90, 120, 0.3);
    border-radius: 100px;
  }

  /* Video Section */
  .video-section {
    padding: 120px 0;
    background: var(--blue-01);
  }

  .video-content {
    max-width: 1532px;
    margin: 0 auto;
    padding: 0 0px;
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  .video-text {
    display: flex;
    gap: 32px;
    align-items: flex-start;
  }

  .video-title {
    flex: 1;
    font-size: 48px;
    font-weight: 700;
    line-height: 56px;
    color: var(--blue-05);
  }

  .video-description {
    flex: 1;
    font-size: 20px;
    font-weight: 500;
    line-height: 26px;
    color: var(--blue-05);
  }

  .video-container {
    position: relative;
    width: 100%;
    height: 580px;
    border: 1px solid var(--blue-06);
    overflow: hidden;
  }

  .video-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .play-button {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: none;
    border: none;
    cursor: pointer;
    transition: transform 0.3s;
  }

  .play-button:hover {
    transform: translate(-50%, -50%) scale(1.1);
  }

  /* Products Section */
  .products-section {
    padding: var(--section-padding) 0;
    background: var(--blue-01);
  }

  .products-content {
    max-width: 1532px;
    margin: 0 auto;
    padding: 0 0px;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .products-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 16px;
    margin-bottom: 32px;
  }

  .products-cta-banner {
    position: relative;
    padding: 52px 64px;
    background-image: url('/assets/cta-banner-bg.jpg');
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    min-height: 255px;
    overflow: hidden;
  }

  .cta-banner-content h3 {
    font-size: 48px;
    font-weight: 700;
    line-height: 52px;
    color: var(--blue-01);
    text-shadow: 0 0 4px rgba(0, 0, 0, 0.8);
    margin-bottom: 20px;
  }

  .cta-banner-content p {
    font-size: 20px;
    font-weight: 500;
    color: var(--blue-01);
    text-shadow: 0 0 4px rgba(0, 0, 0, 0.8);
  }

  /* Features Section */
  .features-section {
    padding: var(--section-padding) 0;
    background: var(--blue-02);
  }

  .features-content {
    max-width: 1560px;
    margin: 0 auto;
    padding: 0 0px;
    display: flex;
    flex-direction: column;
    gap: 48px;
  }

  .features-section .section-title {
    text-align: center;
    font-size: 48px;
    line-height: 56px;
  }

  .features-grid {
    display: flex;
    gap: 0;
    box-shadow: 0 0 40px rgba(88, 200, 215, 0.3);
  }

  .features-column {
    display: flex;
    flex-direction: column;
    width: 520px;
  }

  .features-image {
    width: 520px;
    height: 870px;
    border: 1px solid var(--blue-04);
    position: relative;
    background: var(--blue-01);
  }

  .features-image::before,
  .features-image::after {
    content: '';
    position: absolute;
    width: 8px;
    height: 8px;
    background: var(--blue-04);
  }

  .features-image::before {
    top: -4px;
    left: -4px;
  }

  .features-image::after {
    bottom: -4px;
    right: -4px;
  }

  .features-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* About Section */
  .about-section {
    padding: var(--section-padding) 0;
    background: var(--white);
  }

  .about-content {
    max-width: 1532px;
    margin: 0 auto;
    padding: 0 0px;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .about-label {
    font-size: 20px;
    font-weight: 700;
    color: var(--blue-06);
  }

  .about-grid {
    display: flex;
    gap: 80px;
    height: 817px;
  }

  .about-image {
    flex: 1;
    border: 1px solid var(--blue-03);
    background-color: var(--blue-05);
    background-image: url("/assets/factory-1.png");
    background-size: cover;      
    background-position: center; 
    background-repeat: no-repeat;
    overflow: hidden;
    position: relative;
  }

  .slideshow-container {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .slideshow-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
    animation: zoomBlurSlideshow 20s infinite;
    animation-delay: calc(var(--slide-index) * 5s);
  }

  @keyframes zoomBlurSlideshow {
    0% {
      opacity: 0;
      filter: blur(16px);
      transform: scale(1);
    }
    2% {
      opacity: 0.5;
      filter: blur(16px);
      transform: scale(1.2);
    }
    4% {
      opacity: 1;
      filter: blur(0px);
      transform: scale(1);
    }
    25% {
      opacity: 1;
      filter: blur(0px);
      transform: scale(1);
    }
    27% {
      opacity: 0.5;
      filter: blur(16px);
      transform: scale(1.2);
    }
    29%, 100% {
      opacity: 0;
      filter: blur(16px);
      transform: scale(1);
    }
  }

  .about-text {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .about-main {
    display: flex;
    flex-direction: column;
    gap: 40px;
