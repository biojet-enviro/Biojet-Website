---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
---

<Layout title="404 - Page Not Found | Biojet">
  <section class="error-section">
    <div class="error-content">
      <div class="error-visual">
        <div class="error-number">
          <img src="/assets/404.svg" alt="LinkedIn" />
        </div>
        <div class="error-actions">
          <Button variant="primary" href="/" text="Go Home" />
          <Button variant="secondary" href="/contact" text="Contact Us" />
        </div>
      </div>
    </div>
    <div class="error-text">
        <div class="error-suggestions">
          <h3>You might be looking for:</h3>
          <ul>
            <li><a href="/products">Our Products</a></li>
            <li><a href="/about">About Biojet</a></li>
            <li><a href="/blog">Latest Articles</a></li>
            <li><a href="/contact">Get in Touch</a></li>
          </ul>
        </div>
    </div>
  </section>
</Layout>

<style>
  .error-section {
    height: fit-content;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: var(--blue-01);
    padding: var(--section-padding) 80px 24px 0px;
  }

  .error-content {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 80px;
  }

  .error-visual {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 80vh;
    gap: 24px;
    position: relative;
  }

  .error-number {
    font-family: var(--font-mono);
    font-size: 120px;
    font-weight: 500;
    color: var(--blue-04);
    line-height: 1;
    text-shadow: 0 4px 8px rgba(88, 200, 215, 0.2);
  }

  .error-icon {
    animation: float 3s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .error-text {
    display: flex;
    flex-direction: column;
  }

  .error-actions {
    display: flex;
    gap: 24px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .error-suggestions {
    background: var(--white);
    border: 1px solid var(--blue-03);
    padding: 32px;
    text-align: left;
  }

  .error-suggestions h3 {
    font-size: 20px;
    font-weight: 700;
    color: var(--blue-06);
    margin: 0 0 20px 0;
  }

  .error-suggestions ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .error-suggestions li {
    padding: 0;
  }

  .error-suggestions a {
    display: block;
    padding: 12px 16px;
    background: var(--blue-02);
    border: 1px solid var(--blue-03);
    color: var(--blue-06);
    text-decoration: none;
    font-weight: 500;
    font-size: 16px;
    transition: all 0.3s ease;
  }

  .error-suggestions a:hover {
    background: var(--blue-03);
    border-color: var(--blue-04);
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(88, 200, 215, 0.2);
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .error-section {
      padding: 60px 20px;
    }

    .error-content {
      gap: 32px;
    }

    .error-number {
      font-size: 80px;
    }

    .error-icon {
      width: 80px;
      height: 80px;
    }

    .error-icon svg {
      width: 80px;
      height: 80px;
    }

    .error-title {
      font-size: 32px;
      line-height: 40px;
    }

    .error-description {
      font-size: 16px;
      line-height: 24px;
    }

    .error-actions {
      align-items: center;
      gap: 16px;
    }

    .error-suggestions {
      padding: 24px;
      width: 100%;
    }

    .error-suggestions h3 {
      font-size: 18px;
      text-align: center;
      margin-bottom: 16px;
    }

    .error-suggestions ul {
      gap: 8px;
    }

    .error-suggestions a {
      padding: 10px 14px;
      font-size: 14px;
      text-align: center;
    }
  }

  @media (max-width: 480px) {
    .error-section {
      padding: 40px 16px;
    }

    .error-number {
      font-size: 64px;
    }

    .error-icon {
      width: 60px;
      height: 60px;
    }

    .error-icon svg {
      width: 60px;
      height: 60px;
    }

    .error-title {
      font-size: 28px;
      line-height: 36px;
    }

    .error-description {
      font-size: 14px;
      line-height: 20px;
    }

    .error-suggestions {
      padding: 20px;
    }
  }
</style>
