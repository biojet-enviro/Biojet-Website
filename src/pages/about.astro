---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
import { getLocaleFromUrl, useTranslations, type Locale } from '../i18n/translations';

const locale = getLocaleFromUrl(Astro.url) as Locale;
const t = useTranslations(locale);
const linkPrefix = locale === 'en' ? '' : `/${locale}`;
---

<Layout title={`${t.about.title} - Biojet`}>
  <!-- Hero Section -->
  <section class="about-hero">
    <div class="about-hero-content">
      <div class="about-hero-left">
        <p class="about-label">{t.about.heroLabel}</p>
        <h1 class="about-hero-title">
          {t.about.heroTitle.split('Jet Aeration')[0]}
          <span class="gradient-text">Jet Aeration</span>
          {t.about.heroTitle.split('Jet Aeration')[1]}
        </h1>
      </div>
      <div class="about-hero-right">
        <p class="about-hero-description">{t.about.heroDescription}</p>
      </div>
    </div>
  </section>

  <!-- Hero Image -->
  <section class="about-hero-image">
    <img src="/assets/about-hero.jpeg" alt="Wastewater Treatment Plant" />
  </section>

  <!-- What We Do Section -->
  <section class="about-what-we-do">
    <div class="about-what-we-do-content">
      <div class="about-what-we-do-left">
        <p class="about-label">{t.about.whatWeDoLabel}</p>
      </div>
      <div class="about-what-we-do-right">
        <h2 class="about-section-title">{t.about.whatWeDoTitle}</h2>
        <div class="about-photo-row">
          <img src="/assets/aboutpage-zzm.png" 
          alt="Biojet jet aerators on site" class="about-photo-1" />
          <img src="/assets/aboutpage-zd.png" 
          alt="Biojet jet aerators on site" class="about-photo-1" />
          <img src="/assets/aboutpage-ccm.png" 
          alt="Biojet jet aerators on site" class="about-photo-1" />
        </div>
      </div>
    </div>
  </section>

  <!-- Our Expertise Section -->
  <section class="about-expertise">
    <div class="about-expertise-content">
      <div class="about-expertise-left">
        <p class="about-label">{t.about.ourExpertiseLabel}</p>
        <h2 class="about-expertise-title">{t.about.ourExpertiseTitle}</h2>
      </div>
      <div class="about-expertise-right">
        <div class="expertise-item">
          <img src="/assets/pencil-ruler.svg" alt="Customized Solutions" class="expertise-icon" />
          <div class="expertise-text">
            <h3>{t.about.expertiseCustomizedTitle}</h3>
            <p>{t.about.expertiseCustomizedDesc}</p>
          </div>
        </div>
        <div class="expertise-item">
          <img src="/assets/mail.svg" alt="Free Consultation" class="expertise-icon" />
          <div class="expertise-text">
            <h3>{t.about.expertiseConsultationTitle}</h3>
            <p>{t.about.expertiseConsultationDesc}</p>
          </div>
        </div>
        <div class="expertise-item">
          <img src="/assets/handshake.svg" alt="End-to-End Support" class="expertise-icon" />
          <div class="expertise-text">
            <h3>{t.about.expertiseSupportTitle}</h3>
            <p>{t.about.expertiseSupportDesc}</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Biojet Section -->
  <section class="about-why-choose">
    <div class="about-why-choose-header">
      <div class="about-why-choose-header-left">
        <h2 class="about-label">{t.about.whyChooseTitle}</h2>
        <p class="about-why-choose-subtitle">{t.about.whyChooseSubtitle}</p>
      </div>
      <div class="about-why-choose-header-right">
        <div class="factory-row">
          <div class="why-card">
            <div class="factory-image">
              <img src="/assets/about-s1.webp" alt="Factory" />
            </div>
            <div class="why-card-text">
              <h3>{t.about.whyTechnologyTitle}</h3>
              <p>{t.about.whyTechnologyDesc}</p>
            </div>
          </div>
          <div class="why-card">
            <div class="why-card-text">
              <h3>{t.about.whyTrackRecordTitle}</h3>
              <p>{t.about.whyTrackRecordDesc}</p>
            </div>
            <div class="factory-image">
              <img src="/assets/factory-3.webp" alt="Factory" />
            </div>
          </div>
          <div class="why-card">
            <div class="factory-image">
              <img src="/assets/factory-4.webp" alt="Factory" />
            </div>
            <div class="why-card-text">
              <h3>{t.about.whyExpertTitle}</h3>
              <p>{t.about.whyExpertDesc}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    
  </section>

  <!-- Client Logos Section -->
  <section class="about-logos">
    <div class="logo-track">
      <img src="/assets/client-logo-1.png" alt="Client Logo" class="client-logo" />
      <img src="/assets/client-logo-2.png" alt="Client Logo" class="client-logo" />
      <img src="/assets/client-logo-3.png" alt="Client Logo" class="client-logo" />
      <img src="/assets/client-logo-4.png" alt="Client Logo" class="client-logo" />
      <img src="/assets/client-logo-5.png" alt="Client Logo" class="client-logo" />
      <img src="/assets/client-logo-6.png" alt="Client Logo" class="client-logo" />
      <img src="/assets/client-logo-7.png" alt="Client Logo" class="client-logo" />
    </div>
  </section>

  <!-- Contact Section -->
  <section class="about-contact">
    <div class="about-contact-left">
      <div class="about-contact-info">
        <h2>{t.about.contactTitle}</h2>
        <p>{t.about.contactDescription}</p>
      </div>
      <div class="about-contact-details">
        <div class="contact-detail-item">
          <h3>{t.about.contactPhoneLabel}</h3>
          <p>{t.about.contactPhone}</p>
        </div>
        <div class="contact-detail-item">
          <h3>{t.about.contactEmailLabel}</h3>
          <p>{t.about.contactEmail}</p>
        </div>
        <div class="contact-detail-item">
          <h3>{t.about.contactPartnersLabel}</h3>
          <div class="contact-partner">
            <img src="/assets/flag-brazil.svg" alt="Brazil Flag" class="partner-flag" />
            <p>{t.about.contactBrazilAgent}</p>
          </div>
        </div>
      </div>
    </div>
    <div class="about-contact-right">
      <iframe data-tally-src="https://tally.so/embed/31qzrg?alignLeft=1&transparentBackground=1&dynamicHeight=1" loading="lazy" width="100%" height="429" frameborder="0" marginheight="0" marginwidth="0" title="Leave a message."></iframe>
      <script>var d=document,w="https://tally.so/widgets/embed.js",v=function(){"undefined"!=typeof Tally?Tally.loadEmbeds():d.querySelectorAll("iframe[data-tally-src]:not([src])").forEach((function(e){e.src=e.dataset.tallySrc}))};if("undefined"!=typeof Tally)v();else if(d.querySelector('script[src="'+w+'"]')==null){var s=d.createElement("script");s.src=w,s.onload=v,s.onerror=v,d.body.appendChild(s);}</script>
    </div>
  </section>
</Layout>

<style>
  /* Hero Section */
  .about-hero {
    background: var(--blue-01);
    width: 100%;
  }

  .about-hero-content {
    display: flex;
    width: 100%;
    max-width: 1920px;
    margin: 0 auto;
    height: 480px;
  }

  .about-hero-left {
    width: 50%;
    padding: 180px 100px 100px;
    box-sizing: border-box;
  }

  .about-hero-title {
    margin-top: 16px;
    font-family: var(--font-condensed);
    font-size: 64px;
    font-weight: 900;
    line-height: 68px;
    color: var(--blue-07);
    max-width: 750px;
  }

  .gradient-text {
    background: linear-gradient(90deg, #1573ff 0%, #00d4d4 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .about-hero-right {
    width: 50%;
    padding: 0px 100px 60px 0px;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
  }

  .about-hero-description {
    font-size: 16px;
    font-weight: 700;
    line-height: 24px;
    color: var(--blue-07);
    max-width: 750px;
  }

  /* Hero Image */
  .about-hero-image {
    width: 100%;
    height: 600px;
    overflow: hidden;
  }

  .about-hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* What We Do Section */
  .about-what-we-do {
    background: var(--blue-02);
    width: 100%;
  }

  .about-what-we-do-content {
    display: flex;
    max-width: 1920px;
    margin: 0 auto;
  }

  .about-what-we-do-left {
    flex: 1;
    padding: 100px;
    box-sizing: border-box;
  }

  .about-label {
    font-size: 20px;
    font-weight: 700;
    line-height: 26px;
    color: var(--blue-07);
    margin-bottom: 32px;
  }

  .about-what-we-do-right {
    flex: 3;
    padding: 100px 0;
    box-sizing: border-box;
  }

  .about-section-title {
    font-family: var(--font-condensed);
    font-size: 48px;
    font-weight: 900;
    line-height: 54px;
    color: var(--blue-07);
    max-width: 1100px;
  }

  .about-photo-row {
    display: flex;
    margin-top: 48px;
    height: 300px;
    gap: 24px;
  }

  .about-photo-1 {
    height: 300px;
    width: auto;
    object-fit: cover;
  }

  /* Our Expertise Section */
  .about-expertise {
    background: var(--blue-01);
    width: 100%;
  }

  .about-expertise-content {
    display: flex;
    max-width: 1920px;
    margin: 0 auto;
  }

  .about-expertise-left {
    width: 50%;
    padding: 100px;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
  }

  .about-expertise-title,
  .about-why-choose-title,
  .about-why-choose-subtitle {
    font-family: var(--font-condensed);
    font-size: 48px;
    font-weight: 900;
    line-height: 54px;
    color: var(--blue-07);
    margin-right: 48px;
  }

  .about-expertise-right {
    width: 50%;
    padding: 160px 0px;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    gap: 64px;
  }

  .expertise-item {
    display: flex;
    gap: 80px;
    max-width: 660px;
  }

  .expertise-icon {
    width: 80px;
    height: 80px;
    flex-shrink: 0;
  }

  .expertise-text {
    display: flex;
    flex-direction: column;
    gap: 24px;
    flex: 1;
  }

  .expertise-text h3 {
    font-size: 24px;
    font-weight: 900;
    line-height: 30px;
    color: var(--blue-07);
  }

  .expertise-text p {
    font-size: 16px;
    font-weight: 500;
    line-height: 24px;
    color: var(--blue-07);
  }

  /* Why Choose Biojet Section */
  .about-why-choose {
    background: var(--blue-01);
    width: 100%;
    padding: 80px 0px 10px;
  }

  .about-why-choose-header {
    display: flex;
    max-width: 1920px;
  }

  .about-why-choose-header-left {
    flex: 1;
    padding: 60px 100px;
    gap: 24px;
    box-sizing: border-box;
  }

  .about-why-choose-header-right {
    flex: 2;
    padding: 60px 0px;
    box-sizing: border-box;
    display: flex;
    align-items: flex-end;
  }

  /* Factory Images */
  .factory-row {
    display: flex;
    max-width: 1920px;
    flex-direction: column;
  }

  .factory-spacer {
    width: 25%;
    background: transparent;
  }

  /* Why Choose Cards */
  .why-card {
    display: flex;
    max-width: 100%;
    max-height: 360px;
  }

  .factory-image {
    width: 50%;
    overflow: hidden;
    filter: grayscale(60%);
    transition: all 0.3s;
  }

  .factory-image:hover {
    filter: grayscale(0);
  }

  .factory-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .why-card-text {
    width: 50%;
    padding: 24px;
    justify-content: space-between;
    display: flex;
    flex-direction: column;
  }

  .why-card-text h3 {
    font-size: 24px;
    font-weight: 900;
    line-height: 30px;
    color: var(--blue-07);
  }

  .why-card-text p {
    font-size: 16px;
    font-weight: 500;
    line-height: 22px;
    color: var(--blue-07);
  }

  /* Client Logos Section */
  .about-logos {
    background: var(--white);
    padding: 80px 0px;
    width: 100%;
    overflow: hidden;
  }

  .logo-track {
    display: flex;
    gap: 24px;
    align-items: center;
    justify-content: center;
    flex-wrap: nowrap;
    max-width: 1720px;
    margin: 0 auto;
  }

  .client-logo {
    height: 64px;
    width: auto;
    object-fit: contain;
    filter: grayscale(80%);
    opacity: 0.7;
    transition: all 0.3s;
  }

  .client-logo:hover {
    filter: grayscale(0);
    opacity: 1;
  }

  /* Contact Section */
  .about-contact {
    display: flex;
    max-width: 1920px;
    margin: 0 auto;
    background: var(--blue-01);
  }

  .about-contact-left {
    width: 50%;
    padding: 100px;
    box-sizing: border-box;
    background: var(--blue-01);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-height: 900px;
  }

  .about-contact-info {
    display: flex;
    flex-direction: column;
    gap: 40px;
  }

  .about-contact-info h2 {
    font-family: var(--font-condensed);
    font-size: 64px;
    font-weight: 900;
    line-height: 70px;
    color: var(--blue-09);
    max-width: 400px;
  }

  .about-contact-info p {
    font-size: 16px;
    font-weight: 700;
    line-height: 20px;
    color: var(--blue-07);
    max-width: 400px;
  }

  .about-contact-details {
    display: flex;
    flex-direction: column;
    gap: 40px;
    max-width: 470px;
  }

  .contact-detail-item {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .contact-detail-item h3 {
    font-size: 16px;
    font-weight: 700;
    line-height: 20px;
    color: var(--blue-06);
  }

  .contact-detail-item p {
    font-family: var(--font-condensed);
    font-size: 36px;
    font-weight: 900;
    line-height: 42px;
    color: var(--blue-05);
    white-space: pre-line;
  }

  .contact-partner {
    display: flex;
    align-items: center;
    gap: 24px;
  }

  .partner-flag {
    width: 32px;
    height: 32px;
    border-radius: 8px;
    overflow: hidden;
  }

  .about-contact-right {
    border: 1px solid var(--blue-02);
    width: 50%;
    padding: 100px 0;
    box-sizing: border-box;
    background: var(--white);
    padding: 100px;
  }

  .contact-form-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }


  /* Responsive Design */
  @media (max-width: 1440px) {
    .about-hero-content,
    .about-what-we-do-content,
    .about-expertise-content,
    .about-why-choose-header,
    .factory-row,
    .about-contact {
      flex-direction: column;
    }

    .about-hero-left,
    .about-hero-right,
    .about-what-we-do-left,
    .about-what-we-do-right,
    .about-expertise-left,
    .about-expertise-right,
    .about-why-choose-header-left,
    .about-why-choose-header-right,
    .about-contact-left,
    .about-contact-right {
      width: 100%;
    }

    .factory-row {
      max-width: 100%;
      max-height: fit-content;
      margin-top: 24px;
    }

    .why-card {
      max-width: 100%;
      padding: 0px 24px;
    }

    .about-expertise-right {
      border-left: none;
      border-top: 1px solid var(--blue-03);
      padding: 80px 100px;
    }

    .about-contact-left {
      padding: 88px 24px;
      border: none;
      justify-content: flex-start;
      min-height: fit-content;
      gap: 48px;
    }

    .factory-spacer {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .about-what-we-do-left,
    .about-what-we-do-right,
    .about-expertise-left,
    .about-expertise-right,
    .about-why-choose-header-left,
    .about-why-choose-header-right{
      padding: 0px 24px;
    }

    .about-hero-content {
      gap: 16px;
      height: fit-content;
      padding: 0px 0px 48px;
    }

    .about-hero-title {
      font-size: 36px;
      line-height: 44px;
      margin-top: 100px;
    }

    .about-hero-left {
      width: 100%;
      padding: 0px 24px;
    }

    .about-hero-right {
      width: 100%;
      padding: 0px 24px;
    }

    .about-hero-description {
      font-size: 16px;
      font-weight: 500;
      line-height: 22px;
    }

    .about-hero-image {
      width: 100%;
      height: 40vh;
      overflow: hidden;
    }

    .about-what-we-do-content {
      padding: 80px 0px;
      gap: 24px;
    }

    .about-expertise-content {
      padding: 48px 0px;
    }

    .about-why-choose {
      background: var(--blue-02);
      width: 100%;
      padding: 88px 0px 24px;
    }

    .about-why-choose-header {
      gap: 24px;
      margin-bottom: 48px;
    }

    .about-section-title,
    .about-expertise-title,
    .about-why-choose-subtitle  {
      font-size: 24px;
      line-height: 30px;
      max-width: 100%;
    }

    .about-label {
      font-size: 16px;
      font-weight: 700;
      line-height: 24px;
      margin-bottom: 16px;
    }

    .about-expertise-left {
      padding: 48px 24px;
      gap: 24px;
    }

    .about-expertise-right {
      padding: 48px 24px;
      gap: 48px;
    }

    .about-why-choose-title,
    .about-contact-info h2 {
      font-size: 30px;
      line-height: 36px;
      font-weight: 800;
      text-align: center;
      color: var(--blue-05);
    }

    /* Client Logos Section */
    .about-logos {
      padding: 48px;
    }

    .logo-track {
      gap: 8px;
    }

    .client-logo {
      height: 32px;
      width: auto;
    }

    .expertise-item {
      gap: 24px;
    }

    .expertise-text {
      display: flex;
      flex-direction: column;
      gap: 8px;
      flex: 1;
    }

    .expertise-text h3,
    .why-card-text h3 {
      font-size: 20px;
      font-weight: 700;
      line-height: 26px;
    }

    .expertise-text p,
    .why-card-text p  {
      font-size: 16px;
      font-weight: 400;
      line-height: 22px;
    }

    .why-card {
      flex-direction: row;
    }

    .why-card-text {
      height: 360px;
      width: 65%;
      background: var(--white);
      padding: 24px;
      justify-content: center;
      gap: 8px;
    }

    .factory-spacer {
      display: none;
    }

    .factory-image {
      min-height: 360px;
      max-width: 32%;
    }

    .about-contact-info {
      gap: 24px;
    }

    .about-contact-info p {
      font-size: 16px;
      font-weight: 400;
      line-height: 24px;
      max-width: 100%;
    }

    .contact-detail-item h3 {
      font-size: 16px;
      font-weight: 900;
      line-height: 24px;
      color: var(--blue-06);
    }

    .contact-detail-item p {
      font-size: 20px;
      font-weight: 400;
      line-height: 26px;
      color: var(--blue-06);
    }

    .about-contact-right {
      padding: 80px 24px;
    }

  }
</style>
