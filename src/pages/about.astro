---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
import { getLocaleFromUrl, useTranslations, type Locale } from '../i18n/translations';

const locale = getLocaleFromUrl(Astro.url) as Locale;
const t = useTranslations(locale);
const linkPrefix = locale === 'ru' ? '/ru' : '';
---

<Layout title={`${t.about.title} - Biojet`}>
  <section style="min-height: 100vh; display: flex; align-items: center; justify-content: center; padding-top: 150px;">
    <div style="text-align: center; max-width: 1600px; padding: 40px;">
      <h1 style="font-size: 48px; color: var(--blue-06); margin-bottom: 24px;">{t.about.title}</h1>
      <p style="font-size: 20px; color: var(--blue-05); margin-bottom: 40px;">{t.about.underConstruction}</p>
      <Button variant="primary" href={linkPrefix || '/'} text={t.about.backButton} />
    </div>
  </section>
</Layout>

