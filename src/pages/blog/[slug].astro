    }

    .blog-post-content :global(h1) {
      font-size: 28px;
      line-height: 36px;
      margin: 32px 0 20px 0;
      padding-bottom: 10px;
      border-bottom: 3px solid var(--blue-02);
    }

    .blog-post-content :global(h2) {
      font-size: 24px;
      line-height: 32px;
      margin: 28px 0 16px 0;
      padding-bottom: 6px;
      border-bottom: 2px solid var(--blue-02);
    }

    .blog-post-content :global(h3) {
      font-size: 20px;
      line-height: 28px;
      margin: 24px 0 12px 0;
      padding-left: 10px;
      border-left: 3px solid var(--blue-03);
    }

    .blog-post-content :global(h4) {
      font-size: 18px;
      line-height: 26px;
      margin: 20px 0 10px 0;
    }

    .blog-post-content :global(p),
    .blog-post-content :global(li) {
      font-size: 16px;
      line-height: 24px;
    }

    .blog-post-footer {
      padding: 32px 24px 60px;
    }
  }
</style>

<script>
  // Generate Table of Contents
  function generateTableOfContents() {
    const content = document.querySelector('.blog-post-content');
    const tocNav = document.querySelector('.toc-nav');
    
    if (!content || !tocNav) return;

    // Find all h2 and h3 headings
    const headings = content.querySelectorAll('h2, h3');
    
    if (headings.length === 0) return;

    const tocList = document.createElement('ul');
    
    headings.forEach((heading, index) => {
      // Generate ID for heading if it doesn't have one
      if (!heading.id) {
        const id = heading.textContent
          .toLowerCase()
          .replace(/[^a-z0-9]+/g, '-')
          .replace(/(^-|-$)/g, '');
        heading.id = id || `heading-${index}`;
      }

      // Create TOC item
      const li = document.createElement('li');
      const a = document.createElement('a');
      a.href = `#${heading.id}`;
      a.textContent = heading.textContent;
      
      // Add class for h3 to indent it
      if (heading.tagName === 'H3') {
        a.classList.add('toc-h3');
      }
      
      li.appendChild(a);
      tocList.appendChild(li);
    });

    tocNav.appendChild(tocList);

    // Add smooth scrolling
    tocNav.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const href = link.getAttribute('href');
        if (!href) return;
        
        const targetId = href.substring(1);
        const targetElement = document.getElementById(targetId);
        
        if (targetElement) {
          targetElement.scrollIntoView({ 
            behavior: 'smooth',
            block: 'start'
          });
          
          // Update URL without jumping
          history.pushState(null, '', `#${targetId}`);
        }
      });
    });

    // Track active section on scroll
    let ticking = false;
    
    function updateActiveLink() {
      if (!tocNav) return;
      
      const scrollPosition = window.scrollY + 150;
      
      let current = '';
      headings.forEach(heading => {
        const htmlHeading = heading as HTMLElement;
        const top = htmlHeading.offsetTop;
        if (scrollPosition >= top) {
          current = heading.id;
        }
      });

      tocNav.querySelectorAll('a').forEach(link => {
        link.classList.remove('active');
        if (link.getAttribute('href') === `#${current}`) {
          link.classList.add('active');
        }
      });
    }

    window.addEventListener('scroll', () => {
      if (!ticking) {
        window.requestAnimationFrame(() => {
          updateActiveLink();
          ticking = false;
        });
        ticking = true;
      }
    });

    // Initial call
    updateActiveLink();
  }

  // Wrap tables in scrollable container for mobile
  function wrapTables() {
    const content = document.querySelector('.blog-post-content');
    if (!content) return;

    const tables = content.querySelectorAll('table');
    tables.forEach(table => {
      // Skip if already wrapped
      if (table.parentElement?.classList.contains('table-wrapper')) {
        return;
      }

      const wrapper = document.createElement('div');
      wrapper.className = 'table-wrapper';
      table.parentNode?.insertBefore(wrapper, table);
      wrapper.appendChild(table);
    });
  }

  // Run on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      generateTableOfContents();
      wrapTables();
    });
  } else {
    generateTableOfContents();
    wrapTables();
  }
</script>

