---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Button from '../../components/Button.astro';
import { getLocaleFromUrl, type Locale } from '../../i18n/translations';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog', ({ data, id }) => {
    // Only include non-draft posts that are NOT in language subdirectories
    return data.draft !== true && !id.includes('/');
  });
  
  return blogEntries.map(entry => ({
    params: { slug: entry.slug }, 
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// Get current locale
const locale = getLocaleFromUrl(Astro.url) as Locale;

// Helper for creating links
const linkPrefix = locale === 'ru' ? '/ru' : '';

// Format date
const formattedDate = new Intl.DateTimeFormat('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
}).format(entry.data.pubDate);
---

<Layout title={`${entry.data.title} - Biojet Blog`}>
  <article class="blog-post">
    <div class="blog-post-header">
      <div class="blog-post-header-content">
        <a href="/blog" class="back-link">‚Üê Back to Blog</a>
        <h1>{entry.data.title}</h1>
        <div class="blog-post-meta">
          <span class="blog-tag">BLOG</span>
          <span class="blog-date">{formattedDate}</span>
        </div>
      </div>
    </div>



    <div class="blog-post-layout">

      <aside class="table-of-contents" id="toc">
        <h3 class="toc-title">TABLE OF CONTENTS</h3>
        <nav class="toc-nav"></nav>
      </aside>

      <div class="blog-post-content">
        <div class="blog-post-image">
          <img src={entry.data.coverImage} alt={entry.data.title} />
        </div>
        <Content />
      </div>

      <div class="cta-card">
        <div class="cta-card-content">
          <h3>Need jet aerators for your project?</h3>
          <p>Let's explore how Biojet's jet aeration solutions can meet your needs.</p>
        </div>
        <Button variant="primary" href={`${linkPrefix}/contact`} text="Contact Us" />
      </div>

    </div>

    <div class="blog-post-footer">
      <Button variant="secondary" href="/blog" text="View All Articles" />
    </div>
  </article>
</Layout>

