    font-size: 56px;
    font-weight: 700;
    line-height: 64px;
    color: var(--darkgray);
    margin-bottom: 24px;
    text-align: center;
  }

  .blog-post-meta {
    display: flex;
    gap: 16px;
    align-items: center;
  }

  .blog-tag {
    padding: 4px 8px;
    background: var(--blue-02);
    font-size: 14px;
    font-weight: 900;
    color: var(--darkgray);
  }

  .blog-date {
